<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="prototype2.AccountPage"
    MasterBehavior="Split">
    <MasterDetailPage.Master>
        <ContentPage Padding="10" BackgroundColor="Blue" Title="Account Page" Icon="menu.png">
            <ContentPage.Content>
                <StackLayout Margin="5,30,5,5">
                    <Label x:Name="helloUser" Text="" TextColor="White"/>
                    <Button Text="Live Statement" Clicked="OpenPage"/>
                    <Button Text="Account Details" Clicked="OpenPage"/>
                    <Button Text="Payment History" Clicked="OpenPage"/>
                    <Button Text="Contact Us" Clicked="OpenPage"/>
                    <Button Text="Logout" Clicked="Logout"/>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>